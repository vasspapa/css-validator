<?xml version="1.0" encoding="UTF-8"?>
<project default="build" name="CSS validator">

	<target name="build">
	
		<mkdir dir="./css-validator"/>
	
		<javac 
			destdir="./css-validator" 
			srcdir="./org/w3c/css:html"
			debug="yes">
		</javac>

		<copy todir="./css-validator">
		    <fileset dir="./">
		      <exclude name="**/*.java"/>
		    </fileset>
		</copy>
			
	</target>

	<target name="javadoc">
	
		<mkdir dir="./javadoc"/>
	
		<javadoc 
			packagenames="org.w3c.*"
			sourcepath="./"
			destdir="./javadoc"
			author="true"
			version="true"
			windowtitle="CSS validator Javadoc"/>
    
	</target>	

</project>
