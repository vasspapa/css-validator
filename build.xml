<?xml version="1.0" encoding="UTF-8"?>
<project default="build" name="CSS validator">

	<target name="build">
	
		<delete dir="./build"/>
		<mkdir dir="./build"/>
	
		<javac 
			destdir="./build" 
			srcdir="./org/w3c:html"
			debug="yes">
		</javac>

		<copy todir="./build">
		    <fileset dir="./">
		      <exclude name="**/*.java"/>
		      <exclude name="*.html*"/>
		      <exclude name="*.css"/>
		      <exclude name="*.bat"/>
		      <exclude name="*.bat"/>
		      <exclude name="*.xml"/>
		      <exclude name="*.ico"/>
		      <exclude name="*.cvs"/>
		      <exclude name="**/style/*"/>
		      <exclude name="**/images/*"/>
		    </fileset>
		</copy>
			
	</target>

	<target name="javadoc">
	
		<mkdir dir="./javadoc"/>
	
		<javadoc 
			packagenames="org.w3c.*"
			sourcepath="./"
			destdir="./javadoc"
			author="true"
			version="true"
			windowtitle="CSS validator Javadoc"/>
    
	</target>	
	
	<target name="war" depends="build">
		<delete  file="css-validator.war" />
		<war warfile="css-validator.war"
			webxml="web.xml"
			basedir="."
			excludes="**/src/**,**/docs/**,**/build/**,**/*.tmp,*.war,**/org/**,**/html/**"
		>
			<classes dir="build"/>
	
		</war>
		
	</target>

	<target name="clean">
		<delete file="css-validator.war"/>
		<delete dir="./build"/>
	</target>

</project>
